<!-- Setup the index.handlebars to have the template that Handlebars can render onto.
Create a button in index.handlebars that will submit the user input into the database. -->


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Burgers ready to eat</h3>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
          <li>{{this.burger_name}}
            <button type="button" class="btn btn-primary devour-btn" data-id="{{id}}">Devour it!</button>
          </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>


    <div class="col-md-6">
      <h3>Burgers that have been eaten</h3>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
        <li>{{this.burger_name}}
        </li>
        {{/if}}
      {{/each}}
    </ul>
      </div>
  </div>
  
  
  <div class="row">
    <div class="col-md-12">
      
      <form>
  <div class="form-group">
    <label for="add-burger-box">Add a burger</label>
    <input type="text" class="form-control" id="add-burger-box" placeholder="Enter a burger name">
  </div>

  <button type="submit" id="submit-burger" class="btn btn-primary">Submit</button>
</form>
    </div>
  </div>
</div>