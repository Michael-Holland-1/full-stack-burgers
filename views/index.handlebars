<!-- Setup the index.handlebars to have the template that Handlebars can render onto.
Create a button in index.handlebars that will submit the user input into the database. -->


<div class="container">
  <div class="row">
    <div class="col-md-6">
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
          <div class="col-md-2">
            <button type="button" class="btn btn-primary" id="devour-btn">Devour it!</button>
          </div>
          {{/unless}}
        {{/each}}
      </ul>
    </div>


    <div class="col-md-6">
      
    </div>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          
        {{/if}}
      {{/each}}
    </ul>
    
    
  </div>
  
  
  <div class="row">
    <div class="col-md-12">
      
      <form>
  <div class="form-group">
    <label for="add-burger-box">Add a burger</label>
    <input type="text" class="form-control" id="add-burger-box" placeholder="Enter a burger name">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
    </div>
  </div>
</div>